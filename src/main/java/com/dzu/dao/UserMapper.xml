<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dzu.dao.UserMapper">
    <!--    插入一个新用户-->
    <insert id="addUser" parameterType="com.dzu.pojo.User">
        insert into signuser(username, password,LOGINTIMES)
        values (#{username}, #{password},#{logintimes})
    </insert>
    <!--    根据ID删除一个用户-->
    <delete id="deleteUserById" parameterType="Integer">
        delete
        from signuser
        where userid = #{id}
    </delete>
    <!--    更新一个用户-->
    <update id="updateUser" parameterType="com.dzu.pojo.User">
        update SIGNUSER
        set username=#{username},
            password=#{password},
            sex=#{sex},
            realname=#{realname},
            phone=#{phone},
            LOGINTIMES=#{logintimes}
        where userid = #{userid}
    </update>
    <!--    查询所有用户-->
    <select id="queryUsers" resultType="com.dzu.pojo.User">
        select *
        from SIGNUSER
    </select>
    <!--    查询所单个用户-->
    <select id="queryUserById" resultType="com.dzu.pojo.User" parameterType="Integer">
        select *
        from SIGNUSER
        where userid = ${id}
    </select>

    <!--    根据姓名查询用户信息-->
    <select id="queryUserByName" resultType="com.dzu.pojo.User" parameterType="java.lang.String">
        select *
        from SIGNUSER
        where username = #{username}
    </select>


    <select id="queryUsersByName" resultType="com.dzu.pojo.User" parameterType="java.lang.String">
        select *
        from SIGNUSER
        where username = #{username}
    </select>
    <update id="addLoginTimes" parameterType="Integer">
        update SIGNUSER
        set LOGINTIMES=LOGINTIMES + 1
        where USERID = #{id}
    </update>
</mapper>