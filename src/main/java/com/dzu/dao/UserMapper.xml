<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dzu.dao.UserMapper">
    <insert id="addUser" parameterType="User">
    insert into user(uid,username,password)values(#{uid},#{username},#{password});
</insert>
    <delete id="deleteUserById" parameterType="int">
        delete from user where uid=#{uid};
    </delete>
    <update id="updateUser" parameterType="com.dzu.pojo.User">
        update user set username=#{username},password=#{password} where uid=#{uid};
    </update>
</mapper>